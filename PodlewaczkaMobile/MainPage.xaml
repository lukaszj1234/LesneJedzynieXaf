<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             ios:Page.UseSafeArea="true"
             x:Class= "PodlewaczkaMobile.MainPage"
             xmlns:viewmodel ="clr-namespace:PodlewaczkaMobile.ViewModels"
             x:DataType="viewmodel:OdczytViewModel">
    <RefreshView Command="{Binding GetOdczytCommand}">
        <ScrollView>
            <StackLayout>
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="Data odczytu"
                                    FontSize="23"
                                    Padding="10"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="{Binding Odczyt.DataOdczytu}"
                                    FontSize="23"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="Rozpoczęcie podlewania"
                                    FontSize="23"
                                    Padding="10"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="{Binding Odczyt.RozpoczeciePodlewania}"
                                    FontSize="23"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="Zakończenie podlewania"
                                    FontSize="23"
                                    Padding="10"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="{Binding Odczyt.ZakonczeniePodlewania}"
                                    FontSize="23"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <Label Grid.Column="1"
                                    TextColor="#C7DDD1"
                                    Text="Poziom wody"
                                    FontSize="23"
                                    Padding="10"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold" />
                <telerik:RadHorizontalGauge x:Name="gauge" BindingContext="{Binding Odczyt.PoziomWody}" Margin="10">
                    <telerik:RadHorizontalGauge.Axis>
                        <telerik:GaugeLinearAxis Maximum="100"
                                   Minimum="0"
                                   Step="25" />
                    </telerik:RadHorizontalGauge.Axis>
                    <telerik:RadHorizontalGauge.Indicators>
                        <telerik:GaugeShapeIndicator Value="90" />
                    </telerik:RadHorizontalGauge.Indicators>
                    <telerik:RadHorizontalGauge.Ranges>
                        <telerik:GaugeRangesDefinition>
                            <telerik:GaugeRange Color="Red"
                                  From="0"
                                  To="33" />
                            <telerik:GaugeRange Color="Yellow"
                                  From="34"
                                  To="66" />
                            <telerik:GaugeRange Color="Green"
                                  From="67"
                                  To="100" />
                        </telerik:GaugeRangesDefinition>
                    </telerik:RadHorizontalGauge.Ranges>
                </telerik:RadHorizontalGauge>
            </StackLayout>
            
